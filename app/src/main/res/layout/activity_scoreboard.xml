<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/game_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreboardActivity">

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="60sp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/eight_bit_operator_plus8_bold"
        android:text="Tabla de Puntajes"
        android:textAlignment="center"
        android:textColor="#23D5CF"
        android:textSize="65sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_text"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/eight_bit_operator_plus8_bold"
        android:text="NOMBRE   PUNTOS"
        android:textColorHighlight="@color/colorAccent"
        android:textColor="#FAF505"
        android:textSize="30sp"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="5sp"/>

    <ListView
        android:id="@+id/score_list"
        android:layout_width="match_parent"
        android:layout_height="350sp"
        android:layout_below="@id/text_names"
        android:layout_marginTop="3dp"
        android:textAlignment="center"
        android:layout_marginBottom="5sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_list"
        android:layout_marginLeft="20sp"
        android:background="#D400FF"
        android:fontFamily="@font/eight_bit_operator_plus8_bold"
        android:textSize="20sp"
        android:text="Atras" />




</RelativeLayout>