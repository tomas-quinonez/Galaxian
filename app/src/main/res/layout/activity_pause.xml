<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/game_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PauseActivity">

    <TextView
        android:id="@+id/pause_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Juego Pausado"
        android:textAlignment="center"
        android:textColor="#D5238D"
        android:textSize="90sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pause_text"
        android:layout_centerHorizontal="true"
        android:background="#1BD844"
        android:text="Continuar"
        android:layout_marginTop="70dp"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/continue_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#D8831B"
        android:text="MenÃº Principal"
        android:textSize="30dp" />

</RelativeLayout>