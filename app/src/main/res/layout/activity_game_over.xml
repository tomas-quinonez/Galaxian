<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/game_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameOverActivity">

    <TextView
        android:id="@+id/game_over_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/eight_bit_operator_plus8_bold"
        android:text="Game Over"
        android:textAlignment="center"
        android:layout_marginVertical="70dp"
        android:textColor="#D52323"
        android:textSize="110sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_over_text"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/eight_bit_operator_plus8_bold"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name_request_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/eight_bit_operator_plus8_bold"
        android:text="Ingrese nombre jugador/a: "
        android:textAlignment="center"
        android:textColor="#4EE95E"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_request_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/eight_bit_operator_plus8_bold"
        android:hint="Nombre"
        android:textColor="#E61375"
        android:textColorHint="#95D81B60"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edit_text"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


        <Button
            android:id="@+id/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="40sp"
            android:layout_marginRight="30sp"
            android:background="#2AF107"
            android:fontFamily="@font/eight_bit_operator_plus8_bold"
            android:text="Ok"
            android:textSize="20sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:background="#D51D1D"
            android:textSize="20sp"
            android:fontFamily="@font/eight_bit_operator_plus8_bold"
            android:text="Cancelar" />
    </LinearLayout>

</RelativeLayout>