<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title_gal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Galaxian"
        android:textColor="#CEEE15"
        android:textStyle="bold"
        android:textSize="90sp" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_gal"
        android:layout_centerHorizontal="true"
        android:background="#1BD844"
        android:text="Jugar"
        android:layout_marginTop="70dp"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/about_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#D8831B"
        android:text="Acerca"
        android:textSize="30dp" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#D81B7D"
        android:text="Salir"
        android:textSize="30dp" />
</RelativeLayout>